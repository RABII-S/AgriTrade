<?xml version = "1.0" encoding = "utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/jpeg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context=".MainActivity" >


    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="Sign Up"
        android:textColor="#E6000000"
        android:textSize="60dp" />

    <EditText

        android:id="@+id/nom"
        android:background="@drawable/edittextrounded"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_below="@+id/signup"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:hint="Nom"
        android:paddingLeft="18dp"/>

    <EditText

        android:id="@+id/prenom"
        android:background="@drawable/edittextrounded"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_below="@+id/nom"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:hint="PrÃ©nom"
        android:paddingLeft="18dp"/>

    <EditText

        android:id="@+id/editText"
        android:background="@drawable/edittextrounded"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_below="@+id/prenom"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/ic_email"
        android:hint="Email"/>

    <EditText
        android:layout_width="320dp"
        android:background="@drawable/edittextrounded"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_lock"
        android:layout_below="@+id/editText"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:hint="Password" />

    <EditText

        android:id="@+id/local"
        android:background="@drawable/edittextrounded"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/ic_localisa"
        android:hint="Localisation"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/local"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/averia_libre_bold_italic"
        android:text="Gender"
        android:textColor="#DACDCD"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/local"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/gender"
        android:layout_marginLeft="24dp"
        android:id="@+id/malefemale"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/averia_libre_light_italic"
            android:text="Male  "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#DACDCD"
            android:id="@+id/male"
            ></RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averia_libre_light_italic"
            android:text="Female "
            android:textStyle="bold"
            android:textColor="#DACDCD"
            android:textSize="20sp"
            android:id="@+id/female"
            ></RadioButton>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/button"
        android:text="REGISTER"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/malefemale"
        android:layout_centerHorizontal="true"></Button>

</RelativeLayout>
